@model List<ProductDto>
@{
    ViewData["Title"] = "Products";
}
<div class="container border p-4">
    <div class="row text-center">
        <h1>Products List</h1>
    </div>
    <a asp-action="Create" class="btn btn-outline-primary">Add New</a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var dto in Model)
        {
            <tr>
                <td>@dto.Id</td>
                <td>@dto.Name</td>
                <td>@dto.Price.ToString("c")</td>
                <td>@dto.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@dto.Id" class="btn btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@dto.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>